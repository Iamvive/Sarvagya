<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimens_24_dp"
    android:padding="@dimen/dimens_8_dp">

    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/musicIV"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/seekBar"
        app:layout_constraintTop_toBottomOf="@+id/seekBar" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/musicTitleTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:maxLines="1"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/btnPlayPauseIV"
        app:layout_constraintStart_toEndOf="@+id/musicIV"
        app:layout_constraintTop_toTopOf="@+id/musicIV"
        tools:text="Name" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/singerNameTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:maxLines="1"
        android:textColor="@color/divierGrey"
        app:layout_constraintBottom_toBottomOf="@+id/musicIV"
        app:layout_constraintEnd_toEndOf="@+id/musicTitleTV"
        app:layout_constraintStart_toStartOf="@+id/musicTitleTV"
        app:layout_constraintTop_toBottomOf="@+id/musicTitleTV"
        tools:text="Singer Name" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btnNextIV"
        android:layout_width="@dimen/dimens_24_dp"
        android:layout_height="@dimen/dimens_24_dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="@color/white"
        android:padding="@dimen/dimens_4_dp"
        android:src="@drawable/ic_skip_next_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBar" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btnPlayPauseIV"
        android:layout_width="@dimen/dimens_24_dp"
        android:layout_height="@dimen/dimens_24_dp"
        android:layout_marginHorizontal="@dimen/dimens_4_dp"
        android:layout_marginEnd="4dp"
        android:background="@color/white"
        android:padding="@dimen/dimens_4_dp"
        android:src="@drawable/ic_play_arrow_24"
        app:layout_constraintBottom_toBottomOf="@+id/btnNextIV"
        app:layout_constraintEnd_toStartOf="@+id/btnNextIV"
        app:layout_constraintTop_toTopOf="@+id/btnNextIV" />

</androidx.constraintlayout.widget.ConstraintLayout>