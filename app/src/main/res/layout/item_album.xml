<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/dimen_5_dp"
    android:layout_marginHorizontal="@dimen/dimens_4_dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_width="@dimen/dimens_60_dp"
        android:layout_height="@dimen/dimens_60_dp"
        android:paddingHorizontal="@dimen/dimens_15_dp"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="@dimen/dimens_40_dp">
    <ImageView
        android:id="@+id/albumIV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/album_thumbnail"/>

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/albumTV"
        android:layout_width="@dimen/dimens_90_dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardView"
        android:gravity="center_horizontal"
        android:paddingVertical="@dimen/dimens_4_dp"
        tools:text="Hanuman Ji"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="@dimen/dimens_14_sp" />


</RelativeLayout>
